<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.najibun.nim175410171.AppBaret21.MenuUtama">

    <LinearLayout
        android:orientation="vertical"
        android:background="#C5CAE9"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dp" >
        <ImageView
            android:layout_gravity="center"
            android:layout_weight="3"
            android:src="@drawable/banner"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:background="#fff"
            android:gravity="center"
            android:text=" Bala Remaja Jlatren RW 21  "
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:background="#C5CAE9"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:id="@+id/btn_urus"
            android:background="#03A9F4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_group_white_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#fff"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:text="@string/tv_susunan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:id="@+id/btn_tentang"
            android:background="#03A9F4"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/ic_announcement_white_24dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#fff"
                android:text="@string/tv_urus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/btn_acara"
        android:text="Daftar Acara"
        android:background="#03A9F4"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:layout_margin="10dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_view_list_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textSize="20dp"
            android:textColor="#fff"
            android:text="Daftar Kegiatan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>
